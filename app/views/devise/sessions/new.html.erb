<section class="form-auth text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputEmail" class="sr-only">Email address</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "inputEmail", placeholder: "Email address", type: "email", required: "", autofocus: "" %>
    <label for="inputPassword" class="sr-only">Password</label>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password", required: "", type: "password", id: "inputPassword" %>
    <div class="checkbox mb-3">
      <label>
        <%= f.check_box :remember_me, value: "remember-me", type: "checkbox" %> Remember me
      </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
  <% end %>

  <%= render "devise/shared/links" %>
</section>